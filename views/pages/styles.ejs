<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: 0;
    }

    body {
        background: #1fb1eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .wrapper {
        margin-top: 32px;

    }

    h1,
    h2 {
        text-align: center;

        font-weight: bold;
        color: #fff;

    }

    .container {
        max-width: 1100px;
        margin-inline: auto;

    }

    .form {
        max-width: 420px;
        width: 100%;
        display: flex;
        flex-direction: column;
        column-gap: 12px;
        color: #fff;
    }

    .form-block {
        display: flex;
        flex-direction: column;
        column-gap: 8px;
        margin-bottom: 12px;
    }

    .form label {
        font-size: 18px;
        margin-bottom: 8px;
    }

    .form input {
        width: initial;
        border: none;
        border-radius: 6px;
        height: 32px;
        padding: 8px;
    }

    .form-input:focus {
        border: none;
        outline: none;
    }

    .form-submit {
        width: 100%;
        border-radius: 6px;
        background: transparent;
        color: #fff;
        font-weight: bold;
        border: 1px solid #fff;
        height: 48px;
        transition: .3s;
        cursor: pointer;
    }

    .form-submit:hover {
        background: #fff;
        color: #1fb1eb;
    }

    .cards-title {
        margin-top: 32px;
    }

    .cards {
        margin-top: 16px;
        margin-bottom: 24px;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        grid-gap: 24px;
    }

    .card {
        border-radius: 6px;
        background: #fff;
        padding: 12px;
        cursor: pointer;
        transition: .3s;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card h4 {
        text-align: center;
        margin-bottom: 8px;
    }

    .card p {
        line-height: 24px;
        margin-bottom: 12px;
    }

    .card-leader_name {
        text-align: end;
        margin: 8px 0;
    }

    .card-actions {
        margin-top: 12px;
        display: flex;
        justify-content: flex-end;
        column-gap: 10px;
    }

    .card-actions a {
        text-decoration: none;
        color: #000;
        font-size: 14px;
    }
</style>
